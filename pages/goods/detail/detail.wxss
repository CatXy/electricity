swiper{
  width: 100%;
}
swiper image{
  width: 100%;
  height: 100%;
}
.info-box{
  padding: 30rpx;
  box-sizing: border-box;
  font:30rpx/50rpx "微软雅黑";
  color: #333;
}
.name{
  font-weight: bold;
}
.level{
  color: #f00;
}
.time{
  color: #aaa;
}
.owner{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.intro{
  min-height: 400rpx;
  margin-top: 30rpx;
}
.buy-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom:0;
  width: 100%;
  border: 1px solid rgba(0,0,0,.15);
  padding: 32rpx;
  box-sizing: border-box;
}
.buy-box text{
  font:40rpx/60rpx "微软雅黑";
  color: #f00;
}
.buy-box view{
  background: #f00;
  color: #fff;
  text-align: center;
  padding: 25rpx 50rpx;
  border-radius: 50rpx;
}